<%- include layouts/header.ejs %>
    <script>
        function valida_publicacao(Form) {
            var matchLink;
            matchLink = /^https?:\/\/(www\.)?[-a-z0-9+]{2,128}\.[a-z]{2,4}(\.[a-z]{2,4})?(\/[-A-Z0-9+&@#\/%?=~_|!:,.;]*)?$/i;
        
            $(document.getElementsByClassName('warning')).removeClass('warning');
        
            if (Form.name.value.length == 0)  {
                $("#info").addClass('danger alert');
                $("#info").html("Informe o nome!").show().delay(3000).fadeOut(1000);
                Form.name.focus();
                return false;   }
        
            document.getElementById("off").value = "Aguarde! Carregando...";
        
            return true;
        }
    </script>
        <div class="page-data">
            
            <form method="post" action="/customers/edit/<%=data[0].id_pub%>" encType="multipart/form-data" onsubmit="return valida_publicacao(this);">
                <table cellpadding="11">
                <tr>
                    <td class="label">Titulo</td><td>: <input type="text" name="name" value="<%=data[0].nome_pub%>" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Texto</td>
                    <td valign="top">: 
                        <textarea name="address" required cols="30" rows="5"><%=data[0].texto_pub%></textarea>
                    </td>
                </tr>
                <% if(data[0].imagem == null){ %>
                <tr>
                    <td></td>
                    <td><input class="form-control" type="file" name="uploaded_image" accept=""/></td>
                </tr>
                <% } %>
                <tr>
                <td></td><td>
                    <label id="thumbnail" aling="center">
                        <a href="../crop/<%=data[0].id_pub%>"><img src="../../uploads/<%=data[0].imagem%>" width="300" align="center"></a>
                    </label>
                </td>
                </tr>
                       <td> &nbsp;</td><td align="center"> <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>      
